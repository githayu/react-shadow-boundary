{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitOnError": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}